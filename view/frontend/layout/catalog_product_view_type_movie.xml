<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="page-movie"/>
        <referenceBlock name="product.price.final" remove="true"/>
        <referenceBlock name="product.info.addtocart" remove="true"/>
        <referenceBlock name="product.info.mailto" remove="true"/>

        <referenceBlock name="product.info.addto">
            <block class="Sas\Movies\Block\Catalog\Product\View\AddTo\Favorite" name="view.addto.favorite"
                   template="Sas_Movies::catalog/product/view/addto/favorite.phtml" />
        </referenceBlock>

        <referenceBlock name="view.addto.wishlist" remove="true"/>
    </body>
</page>
